        },
        onEventClick: async (args) => {

            const form = [
                { name: "Cập nhật tình trạng phòng" },
                { name: "Tiêu đề", id: "text", disabled: true },
                { name: "Nội dung", id: "description", disabled: true, type: "textarea" },
                { name: "Ghi chú", id: "note", disabled: true, type: "textarea" },
                {
                    name: "Tình trạng", id: "status", type: "select", options: [
                        { name: "Trống", id: "free" },
                        { name: "Chờ", id: "waiting" },
                        { name: "Xác nhận", id: "confirmed" },
                    ]
                },
                {
                    name: "Tạo lịch", id: "customAdd", type: "radio", options: [
                        {
                            name: ' Tạo lịch hàng tuần trong 1 tháng',
                            id: '1',
                        },
                        {
