@using WebLearning.Domain.Entites;
@{
    Layout = null;
}
@model IEnumerable<HistoryAddSlot>;
@if (Model.Count() > 0 && Model != null)
{
        @foreach (var item in Model)
        {
        <div style="border-bottom: 1.5px solid #bebebe" id="@item.CodeId">
                <div style="margin:10px">
@*                    <input type="text" value="@item.Email" id="Email" hidden />
        *@                    
                    <a style="width:40%" class="percentage" id="PatientName" hidden /><strong>Tiều đề: </strong> 
                    @if(item.TypedSubmit == "Edit")
                    {
                        <strong>Dời lịch</strong>
                    }
                    else
                    {
                        <strong>Tạo mới</strong>
                    }
                    <br />
                    <a style="width:40%" class="percentage" id="PatientName" hidden /><strong>Nội dung: </strong> @Html.Raw(item.Description)<br />
                <a style="width:40%" class="percentage" id="PatientName" hidden /><strong>Chi chú: </strong>@Html.Raw(@item.Note) <br />
                    <a style="width:25%" class="percentage" id="PatientName" hidden /><strong>Phòng: </strong> @item.RoomId<br />

                    <a style="width:25%" class="country" id="fromDate" hidden /><strong>Ngày bắt đầu: </strong>@item.Start<br />
                    <a style="width:25%" class="country" id="toDate" hidden /><strong>Ngày kết thúc: </strong>@item.End<br />

                    <a class="visit" style="width:10%;">
                        <strong>Trạng thái:</strong>
                        @if (item.Status == "waiting")
                        {
                            <span class="label label-warning" style="background-color: #f0ad4e;">Đang chờ</span>
                        <span class="label label-danger" style="background-color: #d9534f;cursor:pointer" onclick="window.location.href='/xoa-lich/@item.CodeId'">Xóa</span>

                        }

                        @if (item.Status == "confirmed")
                        {
                            <span class="label label-warning" style="background-color: #5cb85c">Thành công</span>

                        }
                    </a>
                </div>


            </div>


        }
}
else
{
    <div>
        <div class="table-row">
            <a>Bạn chưa có lịch đặt nào</a>
        </div>
    </div>
}