@using WebLearning.Contract.Dtos.CourseRole;
@model CreateCourseRoleDto;
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
    <link href="~/summernote/summernote-bs4.css" rel="stylesheet" />
    <link href="~/summernote.css" rel="stylesheet" />
}
<form asp-controller="CourseRole" asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="container-fluid">
        <h1 class="h3 mb-2 text-gray-800">Tạo mới</h1>

        <!-- Page Heading -->
        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered"  id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Tên Khóa học</th>
                                <th>Tên quyền</th>
                                <th>Mô tả</th>
                            </tr>
                        </thead>
                        <tbody>

                            <tr>
                                <td>
                                    <select class="custom-select" asp-for="CourseId" style="min-width: 200px;" asp-items="ViewBag.Course">
                                        <option value="" disabled selected>Chọn danh mục</option>
                                    </select>
                                </td>
                                <td>
                                    <input type="checkbox" id="checkAll" value="false" clicked="false" />
                                    <label for="checkAll">Chọn tất cả</label>

                                    <div id="allRole">
                                        @foreach (var item in ViewBag.Role)
                                        {
                                            <input type="checkbox" id="@item.RoleName" value="@item.Id" name="RoleIds" />
                                            <label for="@item.RoleName">@item.RoleName</label>

                                            <br />
                                        }
                                    </div>
                                   
                                   @*  <select class="custom-select" asp-for="RoleId" style="min-width: 200px;" asp-items="ViewBag.Role">
                                        <option value="" disabled selected>Chọn danh mục</option>
                                    </select> *@
                                </td>
                                <td>
                                    <input type="submit" value="Tạo mới" class="btn btn-success" />
                                    
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</form>

<script>
    $("#checkAll").on("click", function () {
        $("#allRole input[type=checkbox]").not(this).prop('checked', this.checked);
    });
</script>